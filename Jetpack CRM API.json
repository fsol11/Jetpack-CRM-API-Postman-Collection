              }
            },
            "url": {
              "raw": "{{base_url}}/create_event",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "create_event"
              ]
            },
            "description": "Creates an event (task) in the CRM."
          },
          "response": []
        },
        {
          "name": "View Events",
          "request": {
            "method": "GET",
            "header": [],
