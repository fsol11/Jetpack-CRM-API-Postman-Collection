              "raw": "{\n  \"orderid\": \"uniqueid\",\n  \"email\": \"customers@email.com\",\n  \"status\": \"completed\",\n  \"total\": \"79.99\",\n  \"item_title\": \"Transaction Title\",\n  \"net\": \"59.99\",\n  \"fee\": \"10.00\",\n  \"discount\": \"10.00\",\n  \"tax\": \"0.00\"\n}",
