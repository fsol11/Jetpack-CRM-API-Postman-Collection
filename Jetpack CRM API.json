    {
      "name": "Events",
      "description": "Manage CRM Events (Tasks).",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My Event From the API\",\n  \"customer\": 123,\n  \"notes\": \"Here are some notes for the event\",\n  \"from\": \"02/01/2025 03:00:00\",\n  \"to\": \"02/01/2025 04:00:00\",\n  \"notify\": 24,\n  \"complete\": 0,\n  \"owner\": 1\n}",
              "options": {
                "raw": {
                  "language": "json"
