{
  "info": {
    "name": "Jetpack CRM API (v2)",
    "_postman_id": "a1b2c3d4-e5f6-7890-a1b2-c3d4e5f67890",
    "description": "A Postman collection for the Jetpack CRM API v2, based on the documentation at https://automattic.github.io/jetpack-crm-api-docs/",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Customers",
      "description": "Manage CRM Customers.",
      "item": [
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Lead\",\n  \"prefix\": \"Mr\",\n  \"fname\": \"John\",\n  \"lname\": \"Doe\",\n  \"email\": \"someone@somewhere.com\",\n  \"hometel\": \"1234 567 89\",\n  \"worktel\": \"1234 567 89\",\n  \"mobtel\": \"1234 567 89\",\n  \"addr1\": \"Sample House\",\n  \"addr2\": \"Sample Road\",\n  \"city\": \"Sample City\",\n  \"county\": \"Sample State\",\n  \"postcode\": \"P0ST C0D3\",\n  \"country\": \"UK\",\n  \"assign\": \"1\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/create_customer",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "create_customer"
              ]
            },
            "description": "Creates or updates a customer. The unique key is their email address."
          },
          "response": []
        },
        {
          "name": "View Customers",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"perpage\": \"20\",\n  \"page\": \"1\",\n  \"search\": \"string\",\n  \"transactions\": 1,\n  \"invoices\": 1,\n  \"quotes\": 1,\n  \"owned\": \"1\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/customers",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "customers"
              ]
            },
            "description": "Returns a list of customers."
          },
          "response": []
        },
        {
          "name": "Search Customers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/customer_search?zbs_query=your_search_query",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "customer_search"
              ],
              "query": [
                {
                  "key": "zbs_query",
                  "value": "your_search_query",
                  "description": "Search query string"
                }
              ]
            },
            "description": "Searches the customers based on the query string."
          },
          "response": []
        }
      ]
    },
