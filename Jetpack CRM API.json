  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "{{api_key}}",
        "type": "string"
      },
      {
        "key": "key",
        "value": "api_key",
        "type": "string"
      },
      {
        "key": "in",
        "value": "query",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "id": "b1a2c3d4-e5f6-7890-a1b2-c3d4e5f67890",
        "exec": [
          "// The Jetpack CRM API requires both api_key and api_secret as query parameters.",
          "// The collection 'auth' setting handles api_key.",
          "// This script adds api_secret from your collection variables to every request.",
          "pm.request.url.query.add({",
          "    key: 'api_secret',",
          "    value: pm.variables.get('api_secret')",
          "});"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://your-website.com/wp-json/jetpack-crm/v2",
      "type": "string",
      "description": "The base URL of your WordPress Jetpack CRM API endpoint."
    },
    {
      "key": "api_key",
      "value": "YOUR_API_KEY",
      "type": "string",
      "description": "Your Jetpack CRM API Key."
    },
    {
      "key": "api_secret",
      "value": "YOUR_API_SECRET",
      "type": "string",
      "description": "Your Jetpack CRM API Secret."
    }
  ]
}